        <div class="mcard w-100">
          
            <div class="mcontainer">
              <div class="card-body w-100">
                  <nav aria-label="breadcrumb" role="navigation">
                    <ol class="breadcrumb bg-dark text-white mx-auto" style="background-color: #3b3460;">
                      <li class="breadcrumb-item mx-auto active" aria-current="page" style="color: #fff">Add Item For Bid</li>
                    </ol>
                  </nav>
                  
            <form action="/bidadd" enctype="multipart/form-data" accept-charset="UTF-8" method="POST">
              <div class="form-group">
              <label>Item name</label>
              <div class="form-row">    
                <div class="col">
                  <input type="text" class="form-control" placeholder="Item Name" name="itemname" autofocus="autofocus" required="true" >
                </div>
              </div>
              <br/>
              <div class="form-group">
                <label for="exampleInputContact">Bid Price</label>
                <input type="number" class="form-control" id="exampleInputContact" aria-describedby="ContactHelp" placeholder="Price of ur item" name="minprice" required="true">
              </div>
             <div class="form-group">
                <label for="exampleInputEmai1">Description Of Item</label>
                <textarea type="text" class="form-control" id="exampleInputEmai1" aria-describedby="emailHelp" placeholder="enter smthing which describe ur item" name="description" required="true"></textarea>
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">Date of Bid End</label>
                <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Bid End Time" name="timeperiod" required="true">
              </div>
               
                <input type="hidden" name="email" value="<%= user.email %>">
                     <input type="hidden" name="curr_bid" value="0">
                     <input type="file" name="myimage" required="true"/>
                  <input type="hidden"  name="photo" >
                   <input type="hidden"  name="name" value="<%= user.name %>">
                  
             <center><button type="submit" class="btn btn-primary"  name="commit" id="submit_button">SUBMIT</button></center>
            </form>
